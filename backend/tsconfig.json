{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "target": "es2022",
      "sourceMap": true,
      "lib": ["esnext", "dom"],
      "outDir": "dist",
      "baseUrl": ".",
      "incremental": true,
      // Change this paths keys
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
  }